


@{
    ViewBag.Title = "StudentDetails";
}



@model HomeDetailsViewModel


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">

            <div class="card-header ">
                <hi>@Model.Student.Name</hi>
            </div>

            <div class="card-body text-center">


                @if (Model.Student.PhptoPath != null)
                {
                    for (int i = 0; i < Model.Student.PhptoPath.Split("◇").Length; i++)
                    {
                        string photo = "/image/" + Model.Student.PhptoPath.Split("◇")[i].ToString();
                        <img class="card-img-top" src="@photo" asp-append-version="true" />
                    }
                }
                else
                {
                    <img class="card-img-top" src="/image/ceshi.png" asp-append-version="true" />
                }


                <h4>学生id：@Model.Student.id</h4>
                <h4>邮箱：@Model.Student.Email</h4>
                <h4>班级名称：@Model.Student.ClassName</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">返回</a>
                <a asp-controller="home" asp-action="Edit" asp-route-id="@Model.Student.id" class="btn btn-primary">编辑</a>
                <a href="#" class="btn btn-danger">删除</a>
            </div>

        </div>
    </div>
</div>







@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}
