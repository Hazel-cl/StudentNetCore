@model IEnumerable<Student>
@{ ViewBag.Title = "学生列表页面";
}




<div class="row">
    @foreach (var student in Model)
    {
        var ShowphotoPath = "";
        var photoPath = student.PhptoPath;

        if(photoPath!=null)
        {
            ShowphotoPath = "/image/"+student.PhptoPath.Split("◇")[0];
        }
        else
        {
            ShowphotoPath = "/image/ceshi.png";
        }
<div class="col-md-4">
    <div class="card m-3">
        <div class="card-header">
            <h3>@student.Name</h3>
        </div>
        <img class="card-img-top imagesThumbnail" src="@ShowphotoPath" asp-append-version="true" />
        <div class="card-footer text-center">

            <a asp-controller="home" asp-action="details" asp-route-id="@student.id" class="btn btn-primary m-1">查看</a>

            <a asp-controller="home" asp-action="Edit" asp-route-id="@student.id" class="btn btn-primary m-1">编辑</a>


            <a href="#" class="btn btn-danger m-1">删除</a>
        </div>
    </div>
</div>}
</div>

























